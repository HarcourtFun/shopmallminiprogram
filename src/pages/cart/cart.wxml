<!--pages/cart/cart.wxml-->
<view class="page">
  <view class="shop df" wx:for="{{productData}}" wx:key="{{index}}">
        <image class="sh_slt" src="{{item.ImgUrl}}"></image>
        <view class="df_1">            
            <view class="sp_text">
                <navigator url="../index/detail?productId={{item.ProID}}">
                    <view class="sp_tit ovh1">{{item.ProductName}}</view>
                </navigator>
                <view class="sp_neb">数量：×{{item.BuyCount}}</view>
                <view class="sp_jg">¥：{{item.Price}}</view>
                <button class="dle" data-card-id="{{item.CartID}}" bindtap="removeShopCard">删除</button> 
                <navigator class="dle" url="../order/pay?productId={{item.ProID}}&cartId={{item.CartID}}&buyCount={{item.BuyCount}}">下单</navigator>
            </view>
        </view>
    </view> 
<!--样式-->  
<view class="container carts-list" wx:if="{{carts==''}}">
    <view class="pp">
         <image class="kong" src="../../images/cart.jpg" mode="aspectFill"/>
         <view class="cla">购物车空空如也</view>
    </view> 
</view>
<view class="container carts-list">
<!--勾-->
     <view wx:for="{{carts}}" wx:key="{{index}}" class="carts-item" data-title="{{item.name}}" id="{{item.productid}}" style='{{item.status==1?"":" filter:grayscale(100%);color:#666"}};'>
       <view wx:if="{{item.status==1}}">
         <icon wx:if="{{item.selected}}" type="success_circle"    size="20" bindtap="bindCheckbox" data-index="{{index}}"/>
         <icon wx:else type="circle" size="20" bindtap="bindCheckbox" data-index="{{index}}"/>
       </view>
       <view class='xiajia' wx:else>商品已下架</view>
     <!--img-->
     <view>
         <image class="carts-image" src="{{item.picture}}" mode="aspectFill"/>
    </view>
    <!--文字-->
   <view class="carts-text">
       <text class="carts-title">{{item.name}}</text>
    <view class="carts-subtitle">
        <text class="carts-price">¥ {{item.price}}</text>
    </view>
     </view>
<!--右边-->
     <view class="title">
        <text bindtap="removeShopCard" data-cartid="{{item.productid}}" data-index="{{index}}" class="modal-close">x</text>
         <view class="stepper">
       <!-- 减号 -->
             <text class="{{minusStatuses[index]}}" data-index="{{index}}" bindtap="bindMinus" data-cartid="{{item.productid}}">-</text>
       <!-- 数值 -->
                <input type="number" bindchange="bindManual" value="{{item.amount}}" />
       <!-- 加号 -->
              <text class="normal" data-index="{{index}}" bindtap="bindPlus" data-cartid="{{item.productid}}">+</text>
      </view> 
       </view>

  </view>
</view>


<!--底部-->
<view class="carts-footer">
   <view bindtap="bindSelectAll">
        
       <icon wx:if="{{selectedAllStatus}}" type="success_circle" size="24" />
        <icon wx:else type="circle" size="24" />
        
        <text>全选</text>
        <text class="reds">{{total}}</text>
   </view>
       <view class="button" bindtap='bindCheckout'>立即结算</view>
</view>


</view>

